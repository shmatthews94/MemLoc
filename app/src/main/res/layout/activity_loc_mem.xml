<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LocMem">

    <TextView android:text="Remind me to:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Remind"
        android:layout_marginTop="38dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Task"
        android:layout_marginTop="40dp"
        android:text="do what?"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/Remind"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When I"
        android:id="@+id/When"
        android:layout_marginTop="23dp"
        android:textSize="25dp"
        android:layout_below="@+id/Task"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mem Bank"
        android:id="@+id/MemBank"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Location"
        android:text="What is this place?"
        android:textColor="#6a6a6a"
        android:layout_below="@+id/Arriving"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Added"
        android:layout_above="@+id/MemBank"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrive"
        android:id="@+id/Arriving"
        android:checked="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/Added"
        android:layout_toStartOf="@+id/Added" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:id="@+id/Leaving"
        android:checked="false"
        android:layout_alignTop="@+id/Arriving"
        android:layout_alignRight="@+id/Location"
        android:layout_alignEnd="@+id/Location" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/Add"
        android:layout_above="@+id/Added"
        android:layout_centerHorizontal="true"
        android:onClick="createReminder" />

</RelativeLayout>
